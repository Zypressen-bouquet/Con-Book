<div class="container">
  <div class="row">

			<div class="col-xs-12">
      <div class="row">
        <h3 class="under-border">
            投稿一覧
        </h3>
      </div>
    			<table class="table">
  					<thead>
    					<tr>
      					<th>ユーザーネーム</th>
      					<th>タイトル</th>
      					<th>感想</th>
      					<th colspan="3"></th>
    					</tr>
  					</thead>
  					<tbody>
    					<% @books.each do |book| %>
    						<tr>
    							<td>
    								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                    <%= book.user.name %>
                  </td>
    							<td>
    								<%= book.title %>
    							</td>
    							<td>
                    <%= book.body %>
                  </td>
                  <td>
                    削除する
                  </td>
    						</tr>
              <% end %>
  					</tbody>
					</table>
  		</div>
	</div>
</div>

