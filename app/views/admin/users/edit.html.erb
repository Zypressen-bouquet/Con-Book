<div class="container">
  <div class="row">
    <h3 class="under-border">会員編集画面</h3>
  </div>

  <div class="col-xs-offset-2 col-xs-8">
    <% if flash[:user_updated_error] %>
      <span class="text-danger"><%= flash[:user_updated_error] %></span>
    <% end %>


      <%= form_for (@user), url: admin_user_path(@user) do |f| %>

        <div class="form-group row">
          <div class="col-xs-2">
            <label>会員id</label>
          </div>
          <div class="col-xs-2 text-left">
            <%= @user.id %>
          </div>
        </div>


       　<div class="form-group row">
          <div class="col-xs-3">
            <label>ハンドルネーム</label>
          </div>

          <div class="col-xs-7 col-sx-offset-4">
            <%= f.text_field :name, class: "form-control" %>
          </div>


          <div class="col-xs-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-xs-7">
            <%= f.email_field :email, autofocus: true, class: "form-control offset-1 col-11" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>会員ステータス</label>
          </div>
          <div class="col-xs-9">
            <%= f.radio_button :status, :true %>
            <%= f.label :status, "有効" %>
            <%= f.radio_button :status, :false %>
            <%= f.label :status, "退会" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-5">
            <%= f.submit "変更を保存する", class: "btn btn-primary"  %>
          </div>
        </div>

      <% end %>
  </div>

</div>

