<div class="container">
  <div class="row">
    <h3 class="under-border">ユーザー情報一覧</h3>
  </div>


    <div class="col-xs-11">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>ハンドルネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to edit_admin_user_path(user) do %>
              <%= user.name %>
              <% end %>
            </td>
          <td><%= link_to edit_admin_user_path(user) do %><%= user.email %></td>
              <% end %>
          <td><% if user.status == true %>
              有効
              <% else %>
              退会
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>



  <div class="container">
    <div class="row">
    <div class="col-md-4 py-2 mt-5">
    <%= paginate @users %>
    </div>
    </div>
  </div> 
</div>