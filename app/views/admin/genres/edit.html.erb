<div class="container">
  <div class="row">
    <h3 class="under-border">ジャンル編集画面</h3>
    <div class="col-xs-6">
        <%= form_with url: admin_genre_path(@genre),model:@genre,local: true do |f| %>
          <%= render 'layouts/error_messages', model: @genre %>
          <%= f.text_field :genre%>
          <%= f.radio_button :genre_status, true %>
          <%= f.label :genre_status, t('enums.genre.genre_status.true') %>
          <%= f.radio_button :genre_status, false %>
          <%= f.label :genre_status, t('enums.genre.genre_status.false') %>
          <%= f.submit "変更を保存する",class: "btn btn-primary" %>
        <% end %>  
    </div>
  </div>
</div>