<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3 class="under-border">ユーザー情報</h3>
    </div>

    <div class="col-xs-2">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    </div>

    <div class="col-xs-6">
        <table class="table">
          <tr>
            <td>氏名</td>
              <td>
                <%= @user.name %>
              </td>
          </tr>


          <tr>
            <td>メールアドレス</td>
              <td><%= @user.email %></td>
          </tr>
        </table>
    </div>

    <div class="col-xs-4">

      <%= link_to "編集する", edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "パスワードを変更", edit_user_registration_path, class: "btn btn-primary" %>
    </div>
  </div>

        <div class="col-xs-12">
        <h3 class="under-border">自身の投稿一覧</h3>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>ジャンル</th>
                <th>感想</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @user.books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td>
                  <%= book.genre.genre %>
                </td>
                <td>
                  <%= book.body %>
                </td>
                <td>
                  <%= book.book_comments.count %>件コメント
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
      </div>
  </div>
</div>
</div>

