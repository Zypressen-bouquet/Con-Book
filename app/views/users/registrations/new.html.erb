
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2">
      <h3 class="form-header-title under-border">新規会員登録</h3>            
    </div>        
  </div>
  <div class="row user-edit">
    <div class="col-xs-offset-2 col-xs-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <div class="col-xs-3">
            <label>ハンドルネーム</label>
          </div>
          <div class="col-xs-6">
           <%= f.text_field :name, placeholder:"例）こんぶっくす", class: "form-control" %>
          </div>

        </div>


        <div class="form-group row">
          <div class="col-xs-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-xs-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）sakusaku@mail.com", class: "form-control offset-1 col-11" %>                
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>パスワード（6文字以上）</label>
          </div>
          <div class="col-xs-6">
            <%= f.password_field :password, placeholder:"パスワード", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <label>パスワード確認</label>
          </div>
          <div class="col-xs-6">
            <%= f.password_field :password_confirmation, placeholder:"パスワード確認", autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-5">
            <%= f.submit "ユーザー登録", class: "btn btn-success btn-block"  %>          
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
        <%= link_to "会員の方はこちらからログイン", new_session_path(resource_name), class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>
