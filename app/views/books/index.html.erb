<div class="container">
  <div class="row">
  	<div class="col-xs-3">

        <%= render 'books/genrebox', genres: @genres %>


	    <h2>New book</h2>

        <%= render 'books/newform', book: @bookn %>


		</div>
			<div class="col-xs-9">
      <div class="row">
        <h3 class="under-border">
          <% if params[:genre_id] %>
            <%= @genre.genre %>
          <% else %>
            すべての投稿
          <% end %>
        </h3>
      </div>
    			<table class="table">
  					<thead>
    					<tr>
      					<th>ユーザーネーム</th>
      					<th>タイトル</th>
      					<th>感想</th>
      					<th colspan="3"></th>
    					</tr>
  					</thead>
  					<tbody>
    					<% @books.each do |book| %>
    						<tr>
    							<td>
    								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                    <%= @users.name %>
                  </td>
    							<td>
    								<%= link_to book_path(book.id) do %>
    								<%= book.title %>
                    <% end %>
    							</td>
    							<td>
                    <%= book.body .truncate(20) %>
                  </td>

                    <!-- 下記、コメント -->
                    <td>
                      <%= book.book_comments.count %>件コメント
                    </td>

    						</tr>
              <% end %>
  					</tbody>
					</table>
  		</div>
	</div>
</div>

